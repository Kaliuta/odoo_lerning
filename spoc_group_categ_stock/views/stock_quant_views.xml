<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="quant_search_view" model="ir.ui.view">
        <field name="name">stock.quant.search.inherit.spoc_group_categ_stock</field>
        <field name="model">stock.quant</field>
        <field name="inherit_id" ref="stock.quant_search_view" />
        <field name="priority" eval="9999" />
        <field name="arch" type="xml">
            <filter name="productgroup" position="before">
                <filter name="group_product_categ_id" string="Product Category" context="{'group_by': 'product_categ_id'}" />
            </filter>
        </field>
    </record>

</odoo>
